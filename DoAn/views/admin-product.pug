            //- MAIN CONTENT
            .main-content
                .content-admin.col-10 
                    a.btn.btn-sm.btn-primary(href="/add-pr") Add Product
                    .sptable
                        table.table.table-dark.table-striped
                            thead
                                tr
                                    th(scope='col') ID
                                    th(scope='col') MaSP 
                                    th(scope='col') ImgSP
                                    th(scope='col') Title
                                    th(scope='col') Price 
                                    th(scope='col') Size 
                                    th(scope='col') Mota
                                    th(scope='col') Action
