extends style

mixin display(adProduct)
    each item in adProduct
        tbody
            tr
                th(scope='row')
                    a(href="")=item.ID
                td
                    a(href="")=item.masp
                td
                    a(href="")=item.imgsp
                td
                    a(href="")=item.titlesp
                td
                    a(href="")=item.pricesp
                td
                    a(href="")=item.sizesp
                td
                    a(href="")=item.mota
                td
                    a.btn.btn-sm.btn-primary(href="/edit/" +item.ID) Edit
                    a.btn.btn-sm.btn-danger(href="/deletepro/" +item.ID onclick="return confirm('Bạn chắc chắn muốn xóa')" ) Delete


